@import "vendor/normalize.css"
@import "vendor/boilerplate.css"

lightColor = #F1E9BB
mainColor = #5C483A
altColor1 = #C92C2C
altColor2 = #CF6123
altColor3 = #F3C363
borderStyle = 1px solid lighten(mainColor, 60%)

body
  color mainColor
  background lightColor
  font-family Arvo, sans-serif
  
a
  color mainColor
  text-decoration none

.tacos
  position fixed
  height 400px
  top 0
  left 0
  right 0
  z-index -2
  div
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background-size cover
    background-position center center
    -webkit-background-size cover
    -moz-background-size cover
    -o-background-size cover
    -webkit-transition opacity 1s ease-in-out
    -moz-transition opacity 1s ease-in-out
    -o-transition opacity 1s ease-in-out
    transition opacity 1s ease-in-out
    opacity 0.01
    &.active
      opacity 0.99

.center-block
  width 640px
  margin 0 auto
  
  

header
  margin-top 400px
  width 100%
  position relative
  h1
    position absolute
    padding-left 361px
    width 0
    top -250px
    height 195px
    overflow hidden
    background url(../img/kokopelli.png)
      
  nav
    border-top borderStyle
    border-bottom borderStyle
    width 100%
    background lighten(lightColor, 80%)
    ul
      padding 0
      display block
      text-align center
      margin 0 auto
      li
        display inline-block
        a
          display block
          padding 20px
          font-size 24px
          border-left borderStyle
          &:hover
            color lighten(altColor2, 90%)
            background altColor2
         &:last-child a
            border-right borderStyle

.menu
  background #eee       
  padding-bottom 200px
  
  .taco
    height 600px
    width 800px
    overflow hidden
    margin 0 auto -120px
    clear both
    position relative
    background-repeat no-repeat
    background-position center center
  .info
    position absolute
    h2, p
      margin 0
    .price
      font-size 13px
      color altColor2

#map
  margin 40px auto
  display block
  width 640px

footer
  a
    border-bottom 1px solid mainColor
  overflow hidden
  .left
    float left
  .right
    float right
    text-align right